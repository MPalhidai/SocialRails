<div class="row justify-content-center">
  <div class="col-12 p-0">
    <%= form_for current_user.comments.build(@comment) do |f| %>

    <div class="field">
      <%= f.text_area(:content, class: 'form-control', placeholder: "Reply to post") %>
    </div>

    <div class="field">
      <%= f.hidden_field :post_id, value: post.id %>
    </div>

    <div class="actions">
      <%= f.submit "Comment", class: "form-control btn btn-success btn-sm" %>
    </div>

    <% end %>
  </div>
</div>
